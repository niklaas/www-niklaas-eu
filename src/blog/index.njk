---
layout: "base.template.njk"
pagination:
  data: collections.blog
  size: 12
  alias: posts
---
{% import "macros.njk" as macros %}

{%- block main %}

<div class="text-center __section-gray">
  <h1 class="text-4xl">Blog</h1>
  <p></p>
</div>

<div class="px-4">
  <ul class="grid grid-cols-1 gap-8 divide-y sm:grid-cols-2 sm:divide-y-0 md:grid-cols-3">
    {% for post in posts %}
    <li class="pt-8">{{ macros.postwidget(post) }}</li>
    {% endfor %}
  </ul>
</div>

<div class="mt-12 __section-gray">
  {% include "list-of-tags.njk" %}
</div>

{%- endblock %}
