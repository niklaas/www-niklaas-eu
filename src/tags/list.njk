---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ tag | lower | replace(" ", "-") }}/
---

{% import "macros.njk" as macros %}

{% extends "base.template.njk" %}

{% set taglist = collections[ tag ] %}

{% block main -%}

<div class="px-4 py-6 font-serif text-center bg-gray-50">
  <h1 class="text-xl lowercase">#{{ tag }}</h1>
  <div class="text-sm text-gray-400">{{ taglist | length }} post
  {%- if (taglist | length) > 1 %}s{% endif %}</div>
</div>

<div class="__posts_of_tag-{{ tag | lower }} px-4 divide-y">
  {% for post in taglist | reverse -%}
  <div class="py-6">
    {{ macros.postwidget(post) }}
  </div>
  {%- endfor %}
</div>

<div class="px-4 py-6 bg-gray-50">
  {% include "list-of-tags.njk"%}
</div>

{%- endblock %}
