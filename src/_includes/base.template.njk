            <input class="w-full px-3 py-2 mt-1 border-gray-300 shadow-sm rounded-md" type="text" name="family-name" id="family-name" autocomplete="family-name" required />

            <label class="block mt-4 text-sm font-medium" for="organization">Company</label>
            <input class="w-full px-3 py-2 mt-1 border-gray-300 shadow-sm rounded-md" type="text" name="organization" id="organization" autocomplete="organization" />

            <label class="block mt-4 text-sm font-medium" for="email">Email<span class="inline-block w-1 h-1 ml-1 text-xs align-top bg-blue-600 rounded-full" /></label>
            <input class="w-full px-3 py-2 mt-1 border-gray-300 shadow-sm rounded-md" type="text" name="email" id="email" autocomplete="email" required />

            <label class="block mt-4 text-sm font-medium" for="message">Message<span class="inline-block w-1 h-1 ml-1 text-xs align-top bg-blue-600 rounded-full" /></label>
            <textarea class="w-full h-64 px-3 py-2 mt-1 border-gray-300 shadow-sm rounded-md" type="text" name="message" id="message" required></textarea>

            <button class="w-full mt-4 __btn-primary" type="submit">Let's talk</button>
          </form>
        </div>
      </div>
